<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/normal_bg_color">

	<RelativeLayout
	    android:id="@+id/linear_city"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:background="@color/normal_orange_color"
	    android:gravity="center_vertical" >

	    <TextView
	        android:id="@+id/text_city_top"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/icon_city_back"
	        android:gravity="center_vertical"
	        android:padding="10dp"
	        android:text="@string/text_city"
	        android:textColor="@color/white"
	        android:textSize="20sp" />

	    <ImageView
	        android:id="@+id/img_city_search"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/icon_city_search" />

	</RelativeLayout>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/linear_city">
	    
		<ListView 
		    android:id="@+id/list_city"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:cacheColorHint="@color/normal_bg_color"
		    android:scrollbars="none"
		    android:layout_marginRight="@dimen/little_space">
		</ListView>
		
		<com.apple.view.SiderBar
		    android:id="@+id/view_siderbar_city"
		    android:layout_width="@dimen/normal_input_hieght"
		    android:layout_height="match_parent"
		    android:layout_alignParentRight="true">
		    
		</com.apple.view.SiderBar>
		
		
	</RelativeLayout>
	
</RelativeLayout>
