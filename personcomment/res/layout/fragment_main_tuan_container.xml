<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="@color/white"
    android:padding="@dimen/normal_space" >
    
    <RelativeLayout 
        android:id="@+id/relative_tuan_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        
        <ImageView 
            android:id="@+id/img_tuan_left"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/loading"/>
        <!-- <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_launcher"/> -->
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/linear_tuan_cantainer_rigth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
       
        <TextView 
            android:id="@+id/text_tuan_container_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剪短标题显示"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        
        <TextView 
            android:id="@+id/text_tuan_container_title_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细标题内容"
            android:minLines="2"
            android:maxLines="2"
            android:textSize="16sp"
            android:textColor="@color/gray"/>
        
        <RelativeLayout 
            android:id="@+id/relative_tuan_container_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            
            <TextView 
                android:id="@+id/text_tuan_container_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="120"
                android:textColor="@color/normal_orange_color"/>
            
            <TextView 
                android:id="@+id/text_tuan_container_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_tuan_container_price"
                android:layout_alignBaseline="@+id/text_tuan_container_price"
                android:layout_marginLeft="3dp"
                android:text="240" />

            <TextView
                android:id="@+id/text_tuan_container_rigth_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_tuan_container_value"
                android:layout_alignBottom="@+id/text_tuan_container_value"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:text="88" />

        </RelativeLayout>
        
    </LinearLayout>
    
</LinearLayout>
